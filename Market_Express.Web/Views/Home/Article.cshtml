@model Market_Express.Application.DTOs.Article.ArticleToAddInCartDTO
@{
    ViewData["Title"] = "Articulo";

    string src = Model.Image != null
    ? @Url.Action("GetImage", "Resource", new { area = "", n = Model.Image })
    : "/img/NotAvailable.png";
}

<section class="section-content padding-y bg">
    <div class="container">

        <!-- ============================ COMPONENT 1 ================================= -->
        <div class="card">
            <div class="row no-gutters">
                <aside class="col-md-6">
                    <article class="gallery-wrap">
                        <div class="img-big-wrap">
                            <div align="center">
                                <img src="@src" class="img-fluid" style="cursor: default !important">
                            </div>
                        </div> <!-- img-big-wrap.// -->
                    </article> <!-- gallery-wrap .end// -->
                </aside>
                <main class="col-md-6 border-left">

                    <article class="content-body h-100">
                        <a asp-area=""
                           asp-controller="Home"
                           asp-action="Index"
                           class="float-right btn btn-secondary btn-sm text-white"><i class="fas fa-home"></i></a>
                        <h2 class="title">@Model.Description</h2>

                        <div class="mb-5 mt-3">
                            <var class="price h4">₡@Model.Price</var>
                            <span class="text-muted">c/u</span>
                        </div>


                        <p><b>Código: </b> @Model.BarCode</p>
                        <hr>

                        <div align="center" id="divButtonCart">
                            @if (!Model.IsInCart)
                            {

                                <button data-article-id="@Model.Id"
                                        class="btn btn-primary btn-block"
                                        id="btnAdd">
                                    Añadir al carrito
                                </button>

                            }
                            else
                            {

                                <div align="center">
                                    <div class="input-group input-spinner">
                                        <div class="input-group-prepend">
                                            <button class="btn btn-light font-weight-bold"
                                                    type="button"
                                                    data-article-id="@Model.Id"
                                                    id="btnPlus">
                                                <i class="fas fa-plus text-primary"></i>
                                            </button>
                                        </div>

                                        <input type="text"
                                               class="form-control-original font-weight-bold text-center"
                                               value="@Model.CountInCart"
                                               readonly style="background: #fff !important; ">

                                        <div class="input-group-append">
                                            <button class="btn btn-light font-weight-bold"
                                                    type="button"
                                                    data-article-id="@Model.Id"
                                                    id="btnMinus">
                                                <i class="fas fa-minus text-primary"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </article> <!-- product-info-aside .// -->
                </main> <!-- col.// -->
            </div> <!-- row.// -->
        </div> <!-- card.// -->
    </div>
</section>

@section Scripts{
    <script src="~/js/home.search.articleActions.js"></script>

    <script>
        isSearchView = false;
    </script>
}