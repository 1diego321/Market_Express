                                        </div>
                                        <div class="form-group text-right col-md-6">
                                            <label>Max</label>
                                            <input asp-for="Filters.MaxPrice"
                                                   name="maxPrice"
                                                   class="form-control"
                                                   placeholder="₡100000.00"
                                                   type="number" />
                                        </div>
                                    </div> <!-- form-row.// -->
