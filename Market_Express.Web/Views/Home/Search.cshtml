                                    <input type="range" class="custom-range" min="0" max="100" name="">
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label>Min</label>
                                            <input asp-for="Filters.MinPrice"
                                                   name="minPrice"
                                                   class="form-control"
                                                   placeholder="₡0"
