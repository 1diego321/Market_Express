@model List<Market_Express.Application.DTOs.Address.AddressDTO>
<h5>Direcciones <i class="fas fa-info-circle text-primary" title="Las direcciones son necesarias para poder realizar pedidos, al procesar un carrito debes de elegir una dirección para generar el pedido."></i></h5>
@if (Model?.Count > 0)
{
    int iCount = 1;
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var address in Model)
            {
                <tr title="@address.Detail">
                    <td style="width: 7%;">@iCount</td>
                    <td style="width: 69%;">@address.Name</td>
                    <td style="width: 24%;">
                        <div class="w-75 mx-auto">
                            <input type="hidden" name="hdAddressId" id="hdAddressId" value="@address.Id" />
                            <a href="#" class="btn btn-sm btn-success" title="Modificar" data-toggle="modal" data-target="#modalAddress" id="putAddress"><i class="fas fa-pen"></i></a>
                        </div>
                    </td>
                </tr>
                iCount++;
            }

            @if (Model.Count < 3)
            {
                <tr>
                    <td colspan="3">
                        <div class="w-50 mx-auto">
                            <a href="#" class="btn btn-sm btn-primary btn-block" data-toggle="modal" data-target="#modalAddress" id="postAddress">Añadir nueva dirección <i class="fas fa-plus"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        <p><span class="text-danger">No tienes direcciones creadas!</span> Haz click en el botón inferior para crear una.</p>
        <div class="w-50 mx-auto">
            <a href="#" class="btn btn-sm btn-primary btn-block" data-toggle="modal" data-target="#modalAddress" id="postAddress">Añadir una nueva dirección <i class="fas fa-plus"></i></a>
        </div>
    </div>
}