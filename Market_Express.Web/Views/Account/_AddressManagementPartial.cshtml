@model List<Market_Express.Application.DTOs.Address.AddressDTO>
<div class="py-1">
    <h4 class="d-inline">Direcciones</h4>
    <i type="button" class="fas fa-info-circle text-primary" data-trigger="focus" tabindex="0" data-toggle="popover" title="Información" data-content="Las direcciones son necesarias para realizar pedidos, al procesar un carrito debes elegir una dirección a la cual debe ser enviado el pedido generado."></i>
</div>
<hr />
@if (Model?.Count > 0)
{
    <div class="row">
        @foreach (var address in Model)
        {
            <div class="col-md-4 mb-3 d-flex justify-content-center">
                <div class="card" style="width: 18rem;">
                    <div class="card-body h-100">
                        <h5 class="card-title text-center">@address.Name</h5>
                        <p class="card-text text-justify">@address.Detail</p>
                    </div>
                    <div class="card-footer mt-auto">
                        <div class="text-center">
                            <input type="hidden" name="hdAddressId" id="hdAddressId" value="@address.Id" />
                            <a href="#" class="btn btn-sm btn-success" title="Modificar" data-toggle="modal" data-target="#modalAddress" id="putAddress"><i class="fas fa-pen"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (Model.Count < 3)
        {
            <div class="col-md-4 mb-3 d-flex justify-content-center">
                <div class="card" style="width: 18rem;">
                    <div class="card-body h-100 d-flex">
                        <h5 class="card-title m-auto">
                            <a href="#" class="" data-toggle="modal" data-target="#modalAddress" id="postAddress"><i class="fas fa-plus-square fa-5x"></i></a>
                        </h5>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
<div class="row">
    <div class="col-md-4 mb-3 d-flex justify-content-center">
        <div class="card" style="width: 18rem;">
            <div class="card-body h-100 d-flex">
                <h5 class="card-title m-auto">
                    <a href="#" class="" data-toggle="modal" data-target="#modalAddress" id="postAddress"><i class="fas fa-plus-square fa-5x"></i></a>
                </h5>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="d-flex h-100">
            <p class="text-danger m-auto">No tienes ninguna dirección<span class="text-dark">, pulsa el botón para crear una!</span></p>
        </div>
    </div>
</div>
    
    }