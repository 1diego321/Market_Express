<!DOCTYPE HTML>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta http-equiv="pragma" content="no-cache" />
    <meta http-equiv="cache-control" content="max-age=604800" />
    <meta name="description" content="Sitio de pedidos en linea del Abastecedor Santa Elena.">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>Market Express - @ViewData["Title"]</title>

    <link href="~/img/favicon.ico" rel="shortcut icon" type="image/x-icon">


    <!-- Bootstrap 4-->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootswatch form-control-->
    <link href="~/lib/bootswatch/bootswatch.form-control.css" rel="stylesheet" />

    <!-- Font Awesome 5 -->
    <link href="~/lib/fontawesome/css/all.min.css" type="text/css" rel="stylesheet">

    <!-- Toastr -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />

    <!-- Custom Style -->
    <link href="~/css/ui.css" rel="stylesheet" type="text/css" />
    <link href="~/css/responsive.css" rel="stylesheet" media="only screen and (max-width: 1200px)" />
    <link href="~/css/site.css" rel="stylesheet" />


</head>
@using Market_Express.Domain.Abstractions.DomainServices
@using System.Security.Claims; 
@inject IAccountService accountService
@inject ICartService cartService
@{ 
    string currentUserAlias = "";
    int cartArticlesCount = 0;

    if (User.Identity.IsAuthenticated)
    {
        Guid userId = new Guid(User.FindFirstValue(ClaimTypes.NameIdentifier));

        currentUserAlias = (await accountService.GetUserInfo(userId)).Alias;
        cartArticlesCount = await cartService.GetArticlesCount(userId);
    }

}

<body>
    <!-- ========================= BARRA PRINCIPAL // ========================= -->
    <header class="section-header">
        <section class="header-main border-bottom">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-2 col-4">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="brand-wrap">
                            <img class="logo" src="~/img/logo.png">
                        </a> <!-- brand-wrap.// -->
                    </div>
                    <div class="col-lg-6 col-sm-12 py-2">
                        <form action="#" class="search">
                            <div class="input-group w-100">
                                <input type="search" class="form-control-original" placeholder="Buscar">
                                <div class="input-group-append">
                                    <button class="btn btn-primary" type="submit">
                                        <i class="fa fa-search"></i> Buscar
                                    </button>
                                </div>
                            </div>
                        </form> <!-- search-wrap .end// -->
                    </div> <!-- col.// -->
                    <div class="col-lg-4 col-sm-6 col-12">
                        <div class="widgets-wrap float-md-right">
                            <div class="widget-header  mr-3">
                                <a asp-area="Client" asp-controller="Cart" asp-action="Index" class="icon icon-sm rounded-circle border">
                                    <i class="fa fa-shopping-cart"></i>
                                </a>
                                <span class="badge badge-pill badge-danger notify" id="cartArticlesCount">@cartArticlesCount</span>
                            </div>
                            <div class="widget-header icontext">
                                <a asp-area="" asp-controller="Account" asp-action="Profile" class="icon icon-sm rounded-circle border"><i class="fa fa-user"></i></a>
                                <div class="text">
                                    <div>
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <p class="text-muted d-inline">Bienvenido <span id="usrAlias" class="d-inline">@currentUserAlias</span>!</p>
                                            <a asp-area="" asp-controller="Account" asp-action="Logout" class="d-block">Cerrar Sesión</a>
                                        }
                                        else
                                        {
                                            <a asp-area="" asp-controller="Account" asp-action="Login">Iniciar Sesión</a>
                                        }
                                    </div>
                                </div>
                            </div>

                        </div> <!-- widgets-wrap.// -->
                    </div> <!-- col.// -->
                </div> <!-- row.// -->
            </div> <!-- container.// -->
        </section> <!-- header-main .// -->
    </header> <!-- section-header.// -->
    <!-- ========================= FIN BARRA PRINCIPAL // ========================= -->
    <!-- ========================= NAVEGACION // ========================= -->
    @if (User.Identity.IsAuthenticated)
    {
        <nav class="navbar navbar-main navbar-expand-lg navbar-light border-bottom">
            <div class="container">

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main_nav"
                        aria-controls="main_nav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="main_nav">
                    <ul class="navbar-nav">

                        <!--
                        <li class="nav-item dropdown">
                            <a class="nav-link pl-0" data-toggle="dropdown" href="#"><strong> <i class="fa fa-bars"></i>
                                    &nbsp All category</strong></a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">Foods and Drink</a>
                                <a class="dropdown-item" href="#">Home interior</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Category 1</a>
                                <a class="dropdown-item" href="#">Category 2</a>
                                <a class="dropdown-item" href="#">Category 3</a>
                            </div>
                        </li>
                        -->

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Order" asp-action="Index">Pedidos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Article" asp-action="Index">Articulos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Category" asp-action="Index">Categorias</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Users" asp-action="Index">Usuarios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Slider" asp-action="Index">Sliders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Binnacle" asp-action="Index">Bitacoras</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Report" asp-action="Index">Reportes</a>
                        </li>
                    </ul>
                </div> <!-- collapse .// -->
            </div> <!-- container .// -->
        </nav>
    }
    <!-- ========================= FIN NAVEGACION // ========================= -->
    <!-- ========================= CONTENIDO // ========================= -->

    <main role="main" class="pb-3">
        <div class="my-4">
            @RenderBody()
        </div>
    </main>

    <!-- ========================= CONTENIDO FIN // ========================= -->
    <!-- ========================= FOOTER ========================= -->
    <footer class="section-footer border-top">
        <div class="container">
            <section class="footer-top padding-y">
                <div class="row">

                    <aside class="col-md col-6">
                        <h6 class="title">Empresa</h6>
                        <ul class="list-unstyled">
                            <li> <a href="/Home/Company/About">Acerca de</a></li>
                        </ul>
                    </aside>
                    <aside class="col-md col-6">
                        <h6 class="title">Ayuda</h6>
                        <ul class="list-unstyled">
                            <li> <a href="/Home/Help/Contact">Contacto</a></li>
                            <li> <a href="/Home/Help/UserManual">Manual de Usuario</a></li>
                        </ul>
                    </aside>
                    <aside class="col-md col-6">
                        <h6 class="title">Cuenta</h6>
                        <ul class="list-unstyled">
                            <li> <a asp-area="" asp-controller="Account" asp-action="Profile">Mi Perfil</a></li>
                            <li> <a asp-area="Client" asp-controller="Order" asp-action="Index">Mis Pedidos</a></li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li> <a asp-area="" asp-controller="Account" asp-action="Logout">Cerrar Sesión</a></li>
                            }
                            else
                            {
                                <li> <a asp-area="" asp-controller="Account" asp-action="Login">Iniciar Sesión</a></li>
                            }
                        </ul>
                    </aside>

                    <aside class="col-md col-6">
                        <h6 class="title">Sistema</h6>
                        <ul class="list-unstyled">
                            <li> <a href="/Home/System/About">Acerca De</a></li>
                            <li> <a href="/Home/System/Contact">Contacto del Desarrollador</a></li>
                        </ul>
                    </aside>
                </div> <!-- row.// -->
            </section> <!-- footer-top.// -->

            <section class="footer-bottom border-top row">
                <div class="col-md-2">
                    <p class="text-muted"> &copy 2021 Market Express </p>
                </div>
                <div class="col-md-8 text-md-center d-none d-md-block text-muted">
                    <span class="px-2">distribuidorsolis@gmail.com</span>
                    <span class="px-2">2-544-0224</span>
                    <span class="px-2">Santa Elena Abajo, Frailes de Desamparados, San José.</span>
                </div>
                <div class="col-md-2 text-md-right text-muted d-none d-md-block">
                    <i class="fas fa-shipping-fast"></i>
                </div>
            </section>
        </div><!-- //container -->

    </footer>
    <!-- ========================= FOOTER FIN // ========================= -->
    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap 4-->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- SweetAlert -->
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Toastr -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

    <!-- Custom Scripts-->
    <script src="~/js/alerts.js"></script>

    <script>
        $(function () {
            /*
            fetch('/Client/Cart/GetCartArticlesCount', { method: 'GET' })
                .then(response => response.text())
                .then(text => $("#cartArticlesCount").html(text));

            fetch('/Account/GetUserAlias', { method: 'GET' })
                .then(response => response.text())
                .then(text => $("#usrAlias").html(text));

            */
            $('[data-toggle="popover"]').popover()

        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>