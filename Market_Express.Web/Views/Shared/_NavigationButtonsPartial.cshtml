@if (User.Identity.IsAuthenticated)
{
    <nav class="navbar navbar-main navbar-expand-lg navbar-light bg-white border-bottom">
        <div class="container">

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main_nav"
                    aria-controls="main_nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="main_nav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" asp-route-fromSearchView="false">Comprar</a>
                    </li>
                    @if (User.IsInRole("ADMINISTRADOR"))
                    {
                        @if (User.IsInRole("ORD_MAN_GEN"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Order" asp-action="Index">Pedidos</a>
                            </li>
                        }

                        @if (User.IsInRole("ART_MAN_GEN"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Article" asp-action="Index">Artículos</a>
                            </li>
                        }

                        @if (User.IsInRole("CAT_MAN_GEN"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Category" asp-action="Index">Categorías</a>
                            </li>
                        }

                        @if (User.IsInRole("SLI_MAN_GEN"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Slider" asp-action="Index">Sliders</a>
                            </li>
                        }

                        @if (User.IsInRole("USE_MAN_GEN"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Users" asp-action="Index">Usuarios</a>
                            </li>
                        }


                        @if (User.IsInRole("ROL_MAN_GEN"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Role" asp-action="Index">Roles y Permisos</a>
                            </li>
                        }

                        @if (User.IsInRole("REP_USE_GEN"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Report" asp-action="Index">Reportes</a>
                            </li>
                        }

                        @if (User.IsInRole("BIN_USE_GEN"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link" data-toggle="dropdown" href="#">
                                    Bitácoras
                                    <i class="fa fa-caret-down"></i>
                                </a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-area="Admin"
                                       asp-controller="Binnacle"
                                       asp-action="Access">Accesos</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item"
                                       asp-area="Admin"
                                       asp-controller="Binnacle"
                                       asp-action="Movement">Movimientos</a>
                                </div>
                            </li>
                        }


                    }
                    else if (User.IsInRole("CLIENTE"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Client" asp-controller="Order" asp-action="Index">Mis Pedidos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Profile">Mi Cuenta</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
}