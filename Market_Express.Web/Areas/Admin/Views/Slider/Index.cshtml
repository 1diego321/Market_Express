@model List<Market_Express.Application.DTOs.Slider.SliderDTO>
@{
    ViewData["Title"] = "Sliders";
}

<section class="container">
    <div class="card">
        <div class="card-header bg-primary">
            <h4 class="text-white">Sliders</h4>
        </div>
        <div class="card-body">
            <a asp-area="Admin" asp-controller="Slider" asp-action="Create" class="btn btn-primary">Agregar nuevo</a>
            <div class="row align-items-strech">
                @foreach (var slider in Model)
                {
                    @using Market_Express.Domain.EntityConstants
                    string active = slider.Status == SliderConstants.ACTIVADO ? "success" : "danger";

                    <div class="col-12 col-md-3 d-flex mt-3 justify-content-center">
                        <div class="card" style="width: 18rem;">
                            <img src="@Url.Action("GetImage","Resource",new { area = "", n = slider.Image })" class="card-img-top" alt="">
                            <div class="card-body">
                                <h5 class="card-title">@slider.Name</h5>
                            </div>
                            <div class="card-footer">
                                <div class="text-center">
                                    <a href="#" class="btn btn-sm btn-success"><i class="fas fa-pen"></i></a>
                                    <a href="#" class="btn btn-sm btn-@active ml-2"><i class="fas fa-power-off"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>




<!--Modificar o Agregar Direccion-->
<div class="modal fade" id="modalAddress" tabindex="-1" aria-labelledby="modalAddressLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="lblAddressTitle">Agregar Dirección</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="#" id="frmAddress" method="post" data-mode="POST">
                    <input type="hidden" name="id" id="id" value="" />
                    <div class="form-group">
                        <label for="name" class="col-form-label">Nombre</label>
                        <input type="text" id="name" name="name" class="form-control" data-val="true" data-val-required="Este campo es obligatorio" maxlength="30" placeholder="Escribe el nombre de la dirección">
                        <span class="field-validation-valid text-danger" data-valmsg-for="name" data-valmsg-replace="true"></span>

                    </div>
                    <div class="form-group">
                        <label for="detail" class="col-form-label">Detalle</label>
                        <textarea name="detail" class="form-control" data-val="true" data-val-required="Este campo es obligatorio" maxlength="255" id="detail" placeholder="Escribe el detalle de la dirección" style="resize: none;"></textarea>
                        <span class="field-validation-valid text-danger" data-valmsg-for="detail" data-valmsg-replace="true"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="submit" class="btn btn-primary" form="frmAddress">Guardar</button>
            </div>
        </div>
    </div>
</div>
