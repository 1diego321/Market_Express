<section class="section-content padding-y">
    <div class="container">
        <div class="row" id="divCartDetails">
            @{ await Html.RenderPartialAsync("_CartDetailsPartial"); }
        </div>
    </div> <!-- container .//  -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->

